<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.symptomaticapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddProblemActivity"
            android:label="@string/title_activity_add_problem"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ListProblemsActivity" />
        <activity
            android:name=".AddRecordActivity"
            android:exported="true" />
        <activity android:name=".CViewProblems" />
        <activity android:name=".CViewRecords" />
        <activity android:name=".Login" />
        <activity
            android:name=".createAccount"
            android:label="@string/title_activity_create_account" />
        <activity android:name=".ViewFullProblemActivity" />
        <activity android:name=".EditProblemActivity"></activity>
    </application>

</manifest>