        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintVertical_bias="0.553">

        <TextView
            android:id="@+id/EnterTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
