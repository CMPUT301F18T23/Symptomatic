<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogButtons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/fa_icon_user"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/showUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:enabled="false"
            android:focusable="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/fa_icon_phone"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>
        <EditText
            android:id="@+id/showPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:enabled="false"
            android:focusable="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/fa_icon_email"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>
        <EditText
            android:id="@+id/showEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:enabled="false"
            android:focusable="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Save"/>
        <Button
            android:id="@+id/dialogEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Save"/>

    </LinearLayout>

</LinearLayout>
